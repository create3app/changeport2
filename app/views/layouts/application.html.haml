!!!
%html
%head
	%title Create3
	= stylesheet_link_tag 'application', media: 'all'
	= javascript_include_tag 'application'
	%link{:rel => "stylesheet", :href => "http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css"}
	%link{:rel => "stylesheet", :href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css"}
	%link{:rel => "stylesheet", :href =>'http://fonts.googleapis.com/css?family=Roboto:400,700,900,100,300'}				
	%link{:href => "http://fonts.googleapis.com/css?family=Roboto:400,500,900", :rel => "stylesheet", :type => "text/css"}/
	= csrf_meta_tags
%body
%header
	.container
		#logo= link_to "Create3", root_path
		%nav 
		-if user_signed_in?
			= link_to "Settings", edit_user_registration_path, :class => "button"
			= link_to "Search Users", users_path, :class =>"button"
			= link_to "Search Campaigns", '#', :class => "button"
			= link_to "My Campaigns", '#', :class => "button"
			= link_to "My Profile", user_path(current_user), :class => 'button'
			= link_to "Logout", destroy_user_session_path, :class => "button"
		- else
			= link_to "Sign in", new_user_session_path, :class => "button"
			= link_to "Sign Up", new_user_registration_path, :class => "button"
.container
	= render partial: 'shared/flash', format: [:html]
	= yield

